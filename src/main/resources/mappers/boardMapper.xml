<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gatheringplatform.mapper.BoardMapper">
    <select id="insertBoard" parameterType="java.util.HashMap" resultType="_long">
        INSERT INTO board
            (author,category,title,thumbnail,content,created_at)
            values(#{author},#{category},#{title},#{thumbnail},#{content},now())
        SELECT LAST_INSERT_ID();
    </select>
</mapper>